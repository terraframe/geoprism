<taglib xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1">
  <tlib-version>1.0</tlib-version>
  <short-name>Geoprism</short-name>
  <tag>
    <description>Localizes the given key respecting bundle precedence</description>
    <name>localize</name>
    <tag-class>net.geoprism.LocalizedTagSupport</tag-class>
    <body-content>empty</body-content>
    <attribute>
      <description>The variable to store the localized key in</description>
      <name>var</name>
      <required>false</required>
      <rtexprvalue>false</rtexprvalue>
    </attribute>
    <attribute>
      <description>The key for the localized value</description>
      <name>key</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
    </attribute>
  </tag>
</taglib>
