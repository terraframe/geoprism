<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdUtil name="net.geoprism.DataUploader" label="Data Uploader">
        <mdMethod name="getAttributeInformation" label="Get Attribute Information" static="true" returnType="java.lang.String">
          <mdParameter name="fileName" label="File name" order="0" type="java.lang.String" />
          <mdParameter name="fileStream" label="File stream" order="1" type="java.io.InputStream" />
        </mdMethod>
        <mdMethod name="getOptionsJSON" label="get Options JSON" static="true" returnType="java.lang.String" />        
      </mdUtil>
      
      <mdController name="net.geoprism.DataUploaderController" label="Data Upload Controller">
        <mdAction name="getAttributeInformation" label="Get attribute information" isPost="true" isQuery="false">
          <mdParameter name="file" type="com.runwaysdk.controller.MultipartFileParameter" label="File" order="0"/>
        </mdAction>
      </mdController>
      
      <mdException name="net.geoprism.excel.InvalidExcelFileException" label="Invalid Excel File Exception" message="The file [{fileName}] is not a valid 2007+ Excel file">
        <attributes>
          <text name="fileName" label="File name" />
        </attributes>
      </mdException>

      <mdException name="net.geoprism.excel.InvalidHeaderRowException" label="Invalid Header Row Exception" message="Header row must contain only text cells with unique values" />
      
      <mdException name="net.geoprism.excel.ExcelFormulaException" label="Excel Formula Exception" message="Workbook cannot contain any forumla cells" />
    </create>
  </doIt>
  <undoIt>
    <delete>
      <object key="net.geoprism.excel.InvalidHeaderRowException" type="com.runwaysdk.system.metadata.MdException"/>
      <object key="net.geoprism.excel.InvalidExcelFileException" type="com.runwaysdk.system.metadata.MdException"/>
      <object key="net.geoprism.DataUploaderController" type="com.runwaysdk.system.metadata.MdController"/>
      <object key="net.geoprism.DataUploader" type="com.runwaysdk.system.metadata.MdView"/>
    </delete>
  </undoIt>
</version>